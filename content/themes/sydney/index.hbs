{{!< default}}
<div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
		<main>
		  {{#foreach posts}}
		  <article>   
		    <section class="posts">
			    <div class="row">
				  	 <div class="col-sm-10 col-sm-offset-1">
					      <h1><a href="{{url}}">{{{title}}}</a></h1>
					      <h5><time datetime="{{date format='YYYY-MM-DD'}}">{{date published_at timeago="true"}}</time></h5>    
					      <p>{{excerpt}}&hellip;</p>
					      <h5><a href="{{url}}">Read more</a></h5>
				     </div>
		    </section>					
		  </article>
		  {{/foreach}}
		  {{pagination}}
		</main>
	</div>
</div>