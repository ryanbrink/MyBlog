	 <script type="text/javascript">		
		$(document).ready(function () { 		
			var waypoint = new Waypoint({
				  element: document.getElementById('main-content'),
				  handler: function(direction) {
				  if (direction == "down") {
				  	$(".navbar").fadeIn(200);	
				  	olark('api.box.show');			    
				  } else {  
				    $(".navbar").fadeOut(200);	
				    olark('api.box.hide');			    
				   }
				}
			});				
		 });
	</script>
  <body>    
